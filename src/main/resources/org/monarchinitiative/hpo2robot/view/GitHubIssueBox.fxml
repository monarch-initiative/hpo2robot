<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="githubVBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <HBox prefHeight="60.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
        <Button fx:id="getIssuesButton" prefWidth="150" text="Retrieve GitHub Issues">
            <HBox.margin>
                <Insets bottom="2.0" left="10.0" right="10.0" top="5.0" />
            </HBox.margin>
        </Button>
        <Button fx:id="nextIssueButton" prefWidth="150" text="Next issue">
            <HBox.margin>
                <Insets bottom="2.0" left="10.0" right="10.0" top="5.0" />
            </HBox.margin>
        </Button>
        <Button fx:id="skipIssueButton" prefWidth="150" text="Skip issue">
            <HBox.margin>
                <Insets bottom="2.0" left="10.0" right="10.0" top="5.0" />
            </HBox.margin>
        </Button>
      <Button fx:id="openInGithubButton" mnemonicParsing="false" text="Open in System Browser">
        <HBox.margin>
            <Insets bottom="2.0" left="10.0" right="10.0" top="5.0" />
        </HBox.margin>
      </Button>
      <Button fx:id="clearGitHubIssue" mnemonicParsing="false" text="Clear">
         <HBox.margin>
            <Insets bottom="2.0" left="10.0" right="10.0" top="5.0" />
         </HBox.margin>
      </Button>
    </HBox>
    <HBox prefHeight="8.0" prefWidth="800.0">
        <Label fx:id="gitHubStatusLabel">
            <HBox.margin>
                <Insets bottom="5.0" left="210.0" right="10.0"/>
            </HBox.margin>
        </Label>
    </HBox>
</VBox>
